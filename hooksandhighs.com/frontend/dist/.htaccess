RewriteEngine On

# remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1 [R=301,L]

# remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1 [R=301,L]

# rewrite /index.php to /
RewriteRule ^index\.php$ / [R=301,L]

# rewrite /impressum.html to /impressum
RewriteRule ^impressum\.html$ /impressum [R=301,L]

# rewrite /privacy-policy.html to /privacy-policy
RewriteRule ^privacy-policy\.html$ /privacy-policy [R=301,L]

# rewrite /rss.php to /rss
RewriteRule ^rss\.php$ /rss [R=301,L]
